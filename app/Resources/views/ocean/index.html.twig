{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ 'ocean.titre.index'|trans }}</h1>

    <table>
        <thead>
            <tr>
                <th>{{ 'ocean.table.th.id'|trans }}</th>
                <th>{{ 'ocean.table.th.name'|trans }}</th>
                <th>{{ 'ocean.table.th.temperature'|trans }}</th>
                <th>{{ 'ocean.table.th.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for ocean in oceans %}
            <tr>
                <td><a href="{{ path('ocean_show', { 'id': ocean.id }) }}">{{ ocean.id }}</a></td>
                <td>{{ ocean.name }}</td>
                <td>{{ ocean.temperature }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('ocean_show', { 'id': ocean.id }) }}">{{ 'ocean.actions.show'|trans }}</a>
                        </li>
                        <li>
                            <a href="{{ path('ocean_edit', { 'id': ocean.id }) }}">{{ 'ocean.actions.edit'|trans }}</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('ocean_new') }}">{{ 'ocean.actions.create'|trans }}</a>
        </li>
    </ul>
{% endblock %}
